#include <stdio.h>
#include <string.h>

int main(void)
{
	char input[5] = "Love";
	printf("문자열의 길이 : %d\n", strlen(input));
	return 0;
}

-----------------------------------------------------------
#include <stdio.h>
#include <string.h>

int main(void)
{
	char inputOne[5] = "B";
	char inputTwo[5] = "B";
	printf("문자열 비교 : %d \n", strcmp(inputOne, inputTwo));    //strcmp() : 단어장이나 문자비교 프로그램에 이용
	return 0;

}

----------------------------------------------------------------
#include <stdio.h>
#include <string.h>
// #define _CRT_SECURE_NO_WARNINGS    -> strcpy() 오류 뜸.. 

int main(void)
{
	char input[10] = "Hello";
	char result[10] = "world";
	strcpy(result, input);
	printf("문자열 복사 : %s \n ", result);
	return 0;

}
